# 환경 변수 설정 예시
# .env 파일로 저장하여 사용

# 모델 경로
HELMET_MODEL_PATH=runs/detect/train/weights/best.pt
POSE_MODEL_PATH=yolov8n-pose.pt

# 서버 설정
SERVER_URL=http://localhost:8000/api/events
SERVER_TIMEOUT=5
SERVER_RETRY_COUNT=3

# 디바이스 설정
DEVICE=cpu  # cpu 또는 cuda

# 감지 설정
HELMET_CONFIDENCE=0.5
POSE_CONFIDENCE=0.3  # 사람 감지 - 낮게 설정하여 헬멧 쓴 사람도 감지

# 낙상 감지 설정 (관절 기반)
FALL_ANGLE_THRESHOLD=45.0  # 몸 각도 임계값 (도)
FALL_HEIGHT_RATIO=0.3  # 머리 높이 비율

# 카메라 설정
RTSP_RECONNECT_INTERVAL=5
RTSP_MAX_RETRIES=5

# 기타
TARGET_FPS=30
DISPLAY=false
ZONE_DETECTION=false
COLLECT_DATASET=false
